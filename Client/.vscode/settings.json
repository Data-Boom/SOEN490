{
    "files.exclude": {
        "**/.git": true, // this is a default value
        "**/node_modules": true,
        "node_modules": true,
        "**/package-lock.json": true,
    },
    "autoimport.autoComplete": true,
    "autoimport.spaceBetweenBraces": true,
    "autoimport.filesToScan": "**/*.{ts,tsx,js,jsx}",
    "editor.formatOnSave": true,
    "problems.autoReveal": true,
    "problems.decorations.enabled": true,
    "eslint.validate": [
        "vue",
        "html",
        "javascript",
        "typescript",
        "javascriptreact",
        "typescriptreact"
    ],
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "todo-tree.regex.regexCaseSensitive": false,
    "sqltools.connections": [
        {
            "mysqlOptions": {
                "authProtocol": "default"
            },
            "previewLimit": 50,
            "server": "databoomserver.mysql.database.azure.com",
            "port": 4000,
            "driver": "MySQL",
            "name": "development",
            "database": "databoom_db_test",
            "username": "databoomuser@databoomserver",
            "password": "Passw0rd"
        }
    ]
}