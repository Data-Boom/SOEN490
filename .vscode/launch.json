    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "localRoot": "${workspaceFolder}\\server",
            "remoteRoot": "${workspaceFolder}\\server",
            "port": 9229,
            "runtimeExecutable": "npm",
            "address": "localhost",
            "type": "node",
            "cwd": "${workspaceFolder}\\server",
            "restart": true
        },
        {
            "name": "Attach",
            "request": "attach",
            "address": "localhost",
            "type": "node",
            "cwd": "${workspaceFolder}\\server",
            "localRoot": "${workspaceFolder}\\server",
            "remoteRoot": "${workspaceFolder}\\server"
        }
    ]
}